{
  "name": "@maintainerr/server",
  "version": "2.14.0",
  "private": true,
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "nest:build": "nest build",
    "start": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:clear": "jest --clearCache",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:run": "ts-node node_modules/typeorm/cli.js migration:run -d ./src/datasource-config.ts",
    "migration:revert": "ts-node node_modules/typeorm/cli.js migration:revert -d ./src/datasource-config.ts",
    "migration:generate": "ts-node node_modules/typeorm/cli.js migration:generate --dataSource ./src/datasource-config.ts -p",
    "migration:show": "ts-node node_modules/typeorm/cli.js migration:show --dataSource ./src/datasource-config.ts"
  },
  "dependencies": {
    "@maintainerr/contracts": "workspace:^",
    "@nestjs/common": "^11.0.20",
    "@nestjs/core": "^11.0.20",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-express": "^11.0.20",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.1.4",
    "@nestjs/typeorm": "^11.0.0",
    "@types/express": "^5.0.1",
    "axios": "^1.9.0",
    "axios-retry": "^4.5.0",
    "chalk": "^4.1.2",
    "cron-validator": "^1.3.1",
    "email-templates": "9.0.0",
    "lodash": "^4.17.21",
    "mime-types": "^3.0.1",
    "nestjs-zod": "^4.3.1",
    "node-cache": "^5.1.2",
    "nodemailer": "6.9.9",
    "openpgp": "^5.7.0",
    "read-last-lines": "^1.8.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.22",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xml2js": "^0.6.2",
    "yaml": "^2.7.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@automock/adapters.nestjs": "^2.1.0",
    "@automock/jest": "^2.1.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.24.0",
    "@faker-js/faker": "^9.6.0",
    "@nestjs/cli": "^11.0.6",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.0.20",
    "@suites/di.nestjs": "^3.0.1",
    "@suites/doubles.jest": "^3.0.1",
    "@suites/unit": "^3.0.1",
    "@types/email-templates": "^10.0.4",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/mime-types": "^2",
    "@types/node": "^22",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/../test/jest.setup.ts"
    ]
  }
}
